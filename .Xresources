! this are Xresources to make xterm look good
! put into ~/.Xresources
! after changing contents, run xrdb -merge ~/.Xresources

!#define FONT1 -*-proggysquare-*-*-*-*-*-80-*-*-*-*-*-*
!#define FONT1 -xos4-terminus-medium-r-normal--17-*-*-*-*-*-iso10646-1
!#define FONT1 -*-fixed-medium-r-normal--18-*-*-*-*-*-iso10646-1
!#define FONT1 -misc-envy code r-medium-r-normal--14-0-0-0-m-0-iso8859-1

!#define FONT1 xft:liberation mono:size=8
!#define FONT1 xft:Andale Mono:size=10
!#define FONT1 xft:Dejavu Sans Mono:pixelsize=16
!#define FONT1 xft:Inconsolata:size=12
!#define FONT1 xft:Consolas:size=11
!#define FONT1 xft:Envy Code R:size=11
!#define FONT1 xft:Terminus:pixelsize=14
!#define FONT1 xft:Terminus
#define FONT1 xft:Bitstream Vera Sans Mono:pixelsize=14

!!!!!!XTERM:FONT
Rxvt*RenderFont: true
Rxvt*FaceName: FONT1
Rxvt*font: FONT1
Rxvt*boldMode: false
Rxvt.letterSpace: -1
!Rxvt.letterSpace: -2
!Rxvt.letterSpace: 0

!!!!!!XTERM:GEOMETRY
!XTerm*geometry: 100x50

!!!!!!XTERM:SCROLLING
Rxvt*scrollBar: false
Rxvt*saveLines: 1024
Rxvt*scrollKey: true
Rxvt*scrollTtyOutput: false
Rxvt*scrollTtyKeypress: true
Rxvt*scrollWithBuffer: false
!XTerm*jumpScroll: true
Rxvt*skipScroll: true
Rxvt*scrollColor: #aaa894
Rxvt*troughColor: #000000
Rxvt*scrollstyle: plain

Rxvt*tintColor: #444444
Rxvt*shading: 80
Rxvt*inheritPixmap: true
Rxvt*transparent: false

Xft.antialias:true
!Xft.dpi:152
!Xft.dpi:101
Xft.dpi:96
Xft.hinting:true
Xft.rgba:rgb
Xft.hintstyle:hintfull
Xft.lcdfilter:lcddefault

Xcursor.theme: pearl
!Xcursor.theme: Human
!Xcursor.theme: neutral
!Xcursor.theme: Ecliz_Full
!Xcursor.theme: aero
!Xcursor.theme: PROTOZOA

xpdf*enableFreetype:    yes
xpdf*antialias:         yes
xpdf*foreground:        black
xpdf*background:        white
!xpdf*urlCommand:        /usr/bin/chromium-bin %s

