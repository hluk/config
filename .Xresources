! this are Xresources to make xterm look good
! put into ~/.Xresources
! after changing contents, run xrdb -merge ~/.Xresources

!#define FONT1 -*-proggysquare-*-*-*-*-*-80-*-*-*-*-*-*
!#define FONT1 -xos4-terminus-medium-r-normal--17-*-*-*-*-*-iso10646-1
!#define FONT1 -*-fixed-medium-r-normal--18-*-*-*-*-*-iso10646-1

!#define FONT1 xft:liberation mono:size=8
!#define FONT1 xft:Andale Mono:size=10
!#define FONT1 xft:Dejavu Sans Mono:size=9
!#define FONT1 xft:Inconsolata:size=13
#define FONT1 xft:Bitstream Vera Sans Mono:pixelsize=12
!#define FONT1 xft:Consolas:size=11

!!!!!!XTERM:FONT
XTerm*RenderFont: true
XTerm*FaceName: FONT1
XTerm*boldMode: false

!!!!!!XTERM:GEOMETRY
!XTerm*geometry: 100x50

!!!!!!XTERM:SCROLLING
XTerm*scrollBar: false
XTerm*saveLines: 1024
XTerm*scrollKey: true
XTerm*scrollTtyOutput: false
XTerm*scrollTtyKeypress: true
XTerm*scrollWithBuffer: false
!XTerm*jumpScroll: true
XTerm*skipScroll: true
XTerm*scrollColor: #aaa894
XTerm*troughColor: #000000
XTerm*scrollstyle: plain

XTerm*tintColor: #60aadd
XTerm*shading: 80
XTerm*inheritPixmap: true
XTerm*transparent: false

Xft.antialias:true
Xft.dpi:101
Xft.hinting:true
Xft.hintstyle:hintfull
Xft.rgba:rgb

Xcursor.theme: pearl
!Xcursor.theme: Human
!Xcursor.theme: neutral
!Xcursor.theme: Ecliz_Full
!Xcursor.theme: aero
!Xcursor.theme: PROTOZOA

xpdf*enableFreetype:    yes
xpdf*antialias:         yes
xpdf*foreground:        black
xpdf*background:        white
!xpdf*urlCommand:        /usr/bin/chromium-bin %s

!!! color schemes: http://phraktured.net/terminal-colors/
!*cursorColor: gray
XTerm*foreground:     rgb:dd/dd/dd
XTerm*background:     rgb:22/22/22
