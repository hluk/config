bindsym $mod+Shift+w exec "~/dev/bin/browser.sh"

bindsym $ctrl+grave exec "~/dev/bin/clipboard.sh"
bindsym $ctrl+exclam exec "~/dev/build/copyq/Desktop-Debug/copyq -s test2 toggle"
bindsym $alt+F2 exec "~/dev/config/bin/sway_run.sh"
