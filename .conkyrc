# vim: set commentstring="# %s"
double_buffer yes

draw_shades no
#draw_outline yes
draw_borders no

gap_x 0
gap_y -99
alignment top_left
#alignment bottom_left
border_inner_margin 0
border_outer_margin 0
border_width 0
draw_graph_borders no
#maximum_width 1366
#minimum_size 1366 10
minimum_size 1920 0

#update_interval 1
update_interval 4
update_interval_on_battery 6

#default_color 888888
#color0 66bbff
#color1 cccccc
#color2 888888
#default_outline_color 202020
#own_window_colour 2060a0

default_color 000000
#default_outline_color 202020
color0 999999
color1 555555
color2 777777
own_window_colour dddddd

own_window yes
#own_window_class Conky
#own_window_type panel
#own_window_type dock
#own_window_type desktop
#own_window_type normal
own_window_hints undecorated,below,skip_taskbar,skip_pager
#own_window_type normal
#own_window_transparent yes
#own_window_argb_visual yes
#own_window_argb_value 215
own_window_hints sticky

#use_xft no
#font -misc-envy code r-medium-r-normal--12-0-0-0-m-0-*-*
use_xft yes
xftfont Aller:size=9:bold
#xftfont URW Gothic L:size=11:bold
#xftfont Linux Libertine C:size=12:bold
#xftfont Quicksand:size=12:bold
#xftfont Fertigo Pro:size=8:bold
#xftfont Terminus:size=5
#xftfont Aller Display:size=12
#xftfont Anivers:size=12:bold
#xftfont Juicy Hunt:size=18
#xftfont Tenderness:size=12.5:bold
#xftfont Yanone Kaffeesatz:size=10
#xftfont Diavlo:size=11
#xftfont Gayatri:size=8
#xftfont Envy Code R:size=8:bold
#xftfont Andale Mono:size=8:bold
#xftfont DejaVu Sans Mono:size=8:bold
#xftfont Nimbus:size=7:bold
#xftfont Inconsolata:size=9:bold
#xftfont Droid Sans:size=11:bold

TEXT
   ${voffset 7}${color0}BAT ${color1}${battery_percent} ${color2}%      ${color0}TEMP ${color1}${hwmon temp 1}$color      ${if_up eth0}${color0}DOWN ${color1}${downspeedf eth0}      ${color0}UP ${color1}${upspeedf eth0}${else}${if_up wlan0}${color0}WIFI DOWN ${color1}${downspeedf wlan0}      ${color0}UP ${color1}${upspeedf wlan0}${else}OFFLINE${endif}${endif}      ${diskiograph /dev/sda 12,120 ddffdd 00ff00 -t}${color0} ROOT ${color1}${fs_free /}${color2}/${color1}${fs_size /}      ${color0}MEM ${color1}${mem}      ${color0}SWAP ${color1}${swap}      ${color0}LOAD ${color1}${loadavg}      ${cpugraph cpu0 10,120 ffdddd ff0000 -t}${color0} CPU ${color1}${cpu cpu1} ${color2}% ${color1}${cpu cpu2} $color      ${alignr}$color      ${color0}$kernel  ${color2}${time %a %d %b}  ${voffset -6}${font Fertigo Pro:size=14:bold}${color1}${time %H:%M}          
