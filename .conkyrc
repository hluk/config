double_buffer yes

draw_shades no
draw_outline yes
draw_borders no
border_margin 0

gap_x 0
gap_y 0
alignment top_left
maximum_width 1366
minimum_size 1366 12

#update_interval 2

default_color aaaaaa
default_outline_color 505050
color0 80d0ff
color1 ffffff
color2 d0d0d0
#own_window_colour 2060a0

own_window yes
own_window_class Conky
own_window_type panel
own_window_transparent yes
own_window_hints sticky

use_xft yes
#xftfont URW Gothic L:size=11:bold
#xftfont Linux Libertine C:size=12:bold
#xftfont Quicksand:size=12:bold
#xftfont Fertigo Pro:size=11:bold
xftfont Aller:size=9:bold
#xftfont Aller Display:size=12
#xftfont Anivers:size=12:bold
#xftfont Juicy Hunt:size=18
#xftfont Tenderness:size=12.5:bold
#xftfont Diavlo:size=14
#xftfont Gayatri:size=12

mpd_host localhost
mpd_port 6600
#music_player_interval 4

