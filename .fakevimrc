" highlight matched
set hlsearch
" command history size
set history=512
" case insensitive search
set ignorecase
set smartcase
" search while typing
set incsearch
" show numbers
set number
" automatic indentation
set autoindent
filetype plugin indent on
" cursor show next/prev parenthesis
set showmatch
" completion menu
set wildmode=longest:full,full
" tab -> spaces
set expandtab
set shiftwidth=4
set tabstop=4
" keep a 5 line buffer for the cursor from top/bottom of window
set scrolloff=5
" X11 clipboard
set clipboard=unnamedplus
" use ~ with movement
set tildeop

" clear highlighted search term on space
noremap <silent> <Space> :nohlsearch<CR>

" faster commands
"nnoremap ; :
"nnoremap : ;

" typos
command! Q :q
command! Qa :qa
command! W :w
command! Wq :wq
command! WQ :wq
