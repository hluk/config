# APPS# {{{
# terminal
"sakura -e ~/dev/bin/screen"
    mod4+q
"xkill"
    mod4+mod1+x
#"/usr/bin/google-chrome"
#"/usr/bin/chromium"
"/usr/bin/chromium-browser"
    mod4+w
"~/dev/copyq-build/release/copyq toggle || ~/dev/copyq-build/release/copyq"
    mod4+semicolon
"~/dev/copyq-build/release/copyq select 2"
    mod4+alt+semicolon
"~/dev/copyq-build/release/copyq edit"
    mod4+backslash
"~/dev/copyq-build/release/copyq remove"
    mod4+alt+backslash
"~/dev/menus/runmenu.sh"
    mod4+r
"SHELL=~/dev/bin/calc.sh sakura -t calc -e 'screen -d -RR calc'"
    mod4+c
"~/dev/menus/gamemenu.sh"
    mod4+g
